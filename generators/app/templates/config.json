{
  "dist": {
    "dist": "dist/",
    "base": "dist/",
    "markup": "dist/",
    "assets": "dist/assets/",
    "browserSyncDir": "dist/",
    "css": "dist/assets/css/",
    "js": "dist/assets/js/",
    "fonts": "dist/assets/fonts/",
    "cssimg": "dist/assets/img/",
    "bitmaps": "dist/assets/img/bitmaps/",
    "vectors": "dist/assets/img/svgfiles/",
    "contentimage": "dist/images/",
    "webpackjsassets": "assets/",
    "cssimgRoot": "/assets/img/"
  },
  "templatePath": {
    "root": "./",
    "css": "assets/css/",
    "js": "assets/js/",
    "fonts": "assets/fonts/",
    "cssimage": "assets/img/",
    "contentimage": "images/"
  },
  "css": {
    "spacer": "20px",
    "baseFontSize": "16px",
    "filename": "<%= projectcssfilename %>"
  },
  "browsersync": {
    "openbrowser": true,
    "https": false,
    "proxy": false
  },

  "modernizr": {
    "options": [
      "setClasses",
      "addTest",
      "testAllProps",
      "fnBind"
    ],
    "tests": [
      "flexbox",
      "touch",
      "inlinesvg",
      "webgl",
      "picture"
    ]
  },
  "src": {
    "style": "src/style/",
    "template": "src/template/",
    "structure": "src/structure/",
    "js": "src/js/",
    "bower": "src/bower/",
    "scripts" : "src/scripts",
    "fonts": "src/fonts/",
    "images": {
      "bitmapSprite": {
        "files": "src/images/bitmapSprite-assets/",
        "name": "sprite.png"
      },
      "vectorSprite": {
        "files": "src/images/vectorSprite-assets/",
        "name": "vector-sprite.svg",
        "symbolName": "symbol-sprite.svg",
        "maxHeight" : 30,
        "maxWidth": 30,
        "padding": 0
      },
      "bitmaps": "src/images/bitmapSingle-assets/",
      "vectors": "src/images/vectorSingle-assets/"
    },
    "contentimage": "src/images/htmlimages/",
    "system": "src/.system/"
  }
}
