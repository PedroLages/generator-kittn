{
  "dist": {
    "base": "dist/",
    "markup": "dist/",
    "browserSyncDir": "dist/",
    "css": "dist/",
    "js": "dist/assets/js/",
    "fonts": "dist/assets/fonts/",
    "cssimg": "dist/assets/img/",
    "bitmaps": "dist/assets/img/bitmaps/",
    "vectors": "dist/assets/img/svgfiles/",
    "contentimage": "dist/images/",
    "cssimgRoot": "/assets/img/"
  },
  "templatePath": {
    "root": "./",
    "css": "./",
    "js": "assets/js/",
    "cssimage": "assets/img/",
    "contentimage": "images/"
  },
  "css": {
    "compiler": "libsass",
    "combineMQ": false,
    "sourcemap": true,
    "indentedSyntax": false,
    "prefix": [
      "last 2 version",
      "> 5%",
      "ie 9"
    ]
  },
  "template": {
    "compiler": true
  },
  "browsersync": {
    "openbrowser": true,
    "proxy": false
  },
  "files": {
    "jsApp": {
      "srcName": "application.js",
      "distName": "application.js"
    },
    "jsCombine" : [
      "src/bower/jquery/dist/jquery.js",
      "src/bower/svg4everybody/dist/svg4everybody.js",
      "src/bower/lazysizes/plugins/bgset/ls.bgset.js",
      "src/bower/lazysizes/lazysizes.js"
    ],
    "jsCombineFilename": "scripts.js",
    "jsCopy": [
      "src/bower/lazysizes/plugins/respimg/ls.respimg.min.js",
      "src/bower/cq-prolyfill/cq-prolyfill.js"
    ],
    "fonts": [
      "src/fonts/icomoon.eot",
      "src/fonts/icomoon.svg",
      "src/fonts/icomoon.ttf",
      "src/fonts/icomoon.woff",
      "src/fonts/FuturaStd-Medium.eot",
      "src/fonts/FuturaStd-Medium.svg",
      "src/fonts/FuturaStd-Medium.ttf",
      "src/fonts/FuturaStd-Medium.woff",
      "src/fonts/FuturaStd-Light.eot",
      "src/fonts/FuturaStd-Light.svg",
      "src/fonts/FuturaStd-Light.ttf",
      "src/fonts/FuturaStd-Light.woff"
    ],
    "launch": [
      {"src": "facebook-og-image.jpg", "dest": "assets/img/system/"},
      {"src": "twitter-og-image.jpg", "dest": "assets/img/system/"},
      {"src": "spinner.gif", "dest": "assets/img/system/"},
      {"src": ".htaccess", "dest": ""}
    ]
  },
  "modernizr": {
    "options": [
      "setClasses",
      "addTest",
      "html5printshiv",
      "testAllProps",
      "fnBind"
    ],
    "tests": [
      "cssanimations",
      "csstransforms",
      "csstransitions",
      "backgroundblendmode",
      "bgsizecover",
      "flexbox",
      "touch",
      "svg",
      "inlinesvg",
      "respond",
      "hsla",
      "rgba",
      "webgl",
      "objectfit",
      "picture"

    ]
  },
  "conditionizr": {
    "filename": "conditionizr.js",
    "files": [
      "src/bower/conditionizr/dist/conditionizr.js",
      "src/bower/conditionizr/detects/chrome.js",
      "src/bower/conditionizr/detects/safari.js",
      "src/bower/conditionizr/detects/firefox.js",
      "src/bower/conditionizr/detects/ie11.js",
      "src/bower/conditionizr/detects/ie10.js",
      "src/bower/conditionizr/detects/ie9.js"
    ]
  },
  "styleguide": {
    "rootPath": "styleguide/",
    "appRoot": "http://localhost:3000",
    "overviewPath": "readme.md",
    "disableEncapsulation": true,
    "disableHtml5Mode": false,
    "extraHead": [
      "<script src=\"assets/js/cq-prolyfill.js\" async></script>",
      "<script src=\"assets/js/ls.respimg.min.js\"></script>",
      "<script src=\"https://cdnjs.cloudflare.com/ajax/libs/lazysizes/1.3.2/lazysizes.min.js\"></script>"
    ]
  },
  "minify": {
    "images": {
      "optimizationLevel": 3,
      "pngquant": {
        "quality": "75-88",
        "speed": 4
      },
      "svgoPlugins": [
        {"cleanupIDs": false},
        {"removeComments": true},
        {"removeViewBox": false},
        {"removeDesc": true},
        {"removeUselessDefs": false},
        {"removeDoctype": true},
        {"removeEmptyText": true},
        {"removeUnknownsAndDefaults": true},
        {"removeEmptyContainers": true},
        {"collapseGroups": true},
        {"removeUselessStrokeAndFill": true},
        {"convertStyleToAttrs": true}
      ],
      "progressive": true,
      "interlaced": true
    },
    "javascript": {
      "options": {
        "mangle": false
      }
    }
  },
  "src": {
    "style": "./src/style/",
    "template": "./src/template/",
    "structure": "src/structure/",
    "js": "src/js/",
    "bower": "src/bower/",
    "scripts" : "src/scripts",
    "fonts": "src/fonts/",
    "images": {
      "bitmapSprite": {
        "files": "src/images/bitmapSprite-assets/",
        "name": "sprite.png"
      },
      "vectorSprite": {
        "files": "src/images/vectorSprite-assets/",
        "name": "vector-sprite.svg",
        "symbolName": "symbol-sprite.svg",
        "maxHeight" : 30,
        "maxWidth": 30,
        "padding": 0
      },
      "bitmaps": "src/images/bitmapSingle-assets/",
      "vectors": "src/images/vectorSingle-assets/"
    },
    "contentimage": "src/images/htmlimages/",
    "system": "src/.system/"
  }
}
